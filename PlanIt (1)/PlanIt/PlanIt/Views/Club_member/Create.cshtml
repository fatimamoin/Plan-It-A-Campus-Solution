@model PlanIt.Models.Club_member

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_StudentPage.cshtml";
}

<h2>Register as Member</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Student_idStudent, "Student Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Student_idStudent, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Student_idStudent, disabled = "disabled", @readonly = "readonly" } })

            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Club_idClub, "Club Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Club_idClub", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Club_idClub, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Positions_idPositions, "Position", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Positions_idPositions", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Positions_idPositions, disabled = "disabled", @readonly = "readonly" } })
            </div>

        </div>
        <div class="form-group">
                @Html.LabelFor(model => model.Why, "Why do you want to apply?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Why, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Why} })
                    @Html.ValidationMessageFor(model => model.Why, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
                @Html.LabelFor(model => model.How, "How will you contribute?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.How, new { htmlAttributes = new { @class = "form-control",   @Value = ViewBag.How,  } })
                    @Html.ValidationMessageFor(model => model.How, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="row">
                    <input type="submit" name="SaveWork" value="Draft" class="btn btn-default" />
                    <input type="submit" name="SaveWork" value="Create" class="btn btn-default" />

                </div>
          
        </div>

    </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
