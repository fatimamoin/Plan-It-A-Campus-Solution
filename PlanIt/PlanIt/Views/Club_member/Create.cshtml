@model PlanIt.Models.Club_member

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ClubsLayout.cshtml";
}

<h2>Register as Member</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="form-group">
    @Html.LabelFor(model => model.Student_idStudent, "Student Name", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <input type="text" value="@ViewBag.Student_idStudent" readonly />
    </div>

</div>

    <div class="form-group">
        @Html.LabelFor(model => model.Club_idClub, "Club Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Club_idClub", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Club_idClub, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Positions_idPositions, "Position", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="@ViewBag.Positions_idPositions" readonly />
        </div>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
