@model IEnumerable<PlanIt.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StudentPage.cshtml";
}


<h2> Welcome Back @ViewBag.id!</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Major)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idStudent }) |
                @Html.ActionLink("Details", "Details", new { id = item.idStudent }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idStudent })
            </td>
        </tr>
    }

</table>
